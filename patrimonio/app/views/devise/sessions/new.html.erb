<div class="container text-center">

  <div class="py-5">
    <h2>Entrar</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => ' needs-validation', :style => 'width: 15rem; margin: auto', :novalidate => true}) do |f| %>
    <div class="mb-3">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :required => true, class:'form-control' %>
      <div class="invalid-feedback">
        Por favor, digite o seu e-mail.
      </div>
    </div>

    <div class="mb-3">
      <%= f.label 'Senha' %>
      <%= f.password_field :password, autocomplete: "current-password", :required => true, class:'form-control' %>
      <div class="invalid-feedback">
        Por gentileza, digite a sua senha.
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label 'Lembrar' %>
      </div>
    <% end -%>

    <%= f.submit "Entrar", class:'btn btn-lg btn-primary btn-block' %>

  <% end %>

  <div class='py-5'>
    <%= render "devise/shared/links", class:'btn btn-secondary my-2' %>
  </div>

</div>

<script>
validarFormulario();
</script>