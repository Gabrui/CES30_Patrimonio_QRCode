<p id="notice"><%= notice %></p>

<h1>Locais</h1>

<table class="table table-bordered table-striped table-condensed table-hover">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locals.each do |local| %>
      <tr>
        <td><%= local.nome %></td>
        <td><%= local.sala %></td>
        <td><%= local.predio %></td>
        <td><%= link_to 'Detalhes', local %></td>
        <td><%= link_to 'Editar', edit_local_path(local) %></td>
        <td><%= link_to 'Apagar', local, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Local', new_local_path %>
