<div class="container">

  <div class="py-5 text-center">
    <h2><%= @categoria.nome%></h2>
  </div>

  <p>
    <strong>Descricao:</strong>
    <%= @categoria.descricao %>
  </p>

  <%= render 'layouts/tabela_itens', itens: @categoria.itens %>

  <div class='py-5'>
     <%if policy(Categoria).edit? %>
    <%= link_to 'Editar', edit_categoria_path(@categoria) , class:'btn btn-secondary my-2' %>
     <%end%>
    <%= link_to 'Voltar', categorias_path, class:'btn btn-secondary my-2' %>
  </div>

</div>
