<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">
      Locais
    </h1>
    <p class="lead text-muted">
      Gerencie os locais aos quais os itens podem pertencer.
    </p>
    <p>
      <%= link_to 'Novo Local', new_local_path, class: 'btn btn-primary my-2' %>
    </p>
  </div>
</section>


<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">

      <% @locais.each do |local| %>
      <div class="col-lg-3 col-md-4 col-sm-6">
        <div class="card mb-4 shadow-sm"><div class="card-body">
            <h4 class="card-title">
              <%= link_to local.nome, local %>
            </h4>
            <p class="card-text">
              <%= local.descricao %>
            </p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to 'Editar', edit_local_path(local), class:'btn btn-sm btn-outline-secondary' %>
                <%= link_to 'Apagar', local, method: :delete, data: { confirm: 'Confirma apagar?' }, class:'btn btn-sm btn-outline-secondary' %>
              </div>
              <small class="text-muted"></small>
            </div>
          </div>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>
