<p id="notice"><%= notice %></p>

<p>
  <strong>Descrição:</strong>
  <%= @item.descricao %>
</p>

<p>
  <strong>QR Code:</strong>
  <%= @item.qr_code %>
  <table class="qr-code">
  <% @qr.modules.each_index do |x| %>
    <tr>
    <% @qr.modules.each_index do |y| %>
    <% if @qr.dark?(x,y) %>
      <td class="black"/>
    <% else %>
      <td class="white"/>
    <% end %>
    <% end %>
    </tr>
  <% end %>
  </table>
</p>

<%= link_to 'Editar', edit_item_path(@item) %> |
<%= link_to 'Voltar', items_path %>
