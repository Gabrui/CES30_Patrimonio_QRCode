<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">
      Itens
    </h1>
    <p class="lead text-muted">
      Crie itens a partir dos Siloms.
    </p>
    <p>
      <%= link_to 'Novo Item', new_item_path, class: 'btn btn-primary my-2' %>
    </p>
  </div>
</section>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.descricao %></td>
        <td><%= link_to 'Detalhes', item %></td>
        <td><%= link_to 'Editar', edit_item_path(item) %></td>
        <td><%= link_to 'Apagar', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Item', new_item_path %>
